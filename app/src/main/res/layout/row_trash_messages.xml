<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/transparent"
     >
    
    
     <CheckBox
        android:id="@+id/row_trash_list_cb_edit"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:visibility="gone"
        android:button="@drawable/bg_checkedbox_large"
        android:focusable="false"
        android:text="" />
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
         android:layout_toLeftOf="@id/row_trash_list_cb_edit"
        android:layout_marginLeft="15dp"
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/row_trash_messages_tv_name_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1-562-765-2233"
            android:textColor="@color/whitelist_font_number_black"
            android:textSize="@dimen/font_size_20" />

        <TextView
            android:id="@+id/row_trash_messages_tv_message_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis nisl ut aliquip ex ea commodo consequat."
            android:textColor="@color/whitelist_font_name_black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

   

</RelativeLayout>